<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shopping_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="0"
    android:layout_rowWeight="1"
    android:layout_column="0"
    android:layout_columnWeight="1"
    android:layout_marginBottom="1dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/txt_shopping_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textSize="20sp"
            android:textColor="@color/design_default_color_primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_shopping_list_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/chbox_shopping_list"
            android:text="1."
            android:textColor="@color/design_default_color_primary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_shopping_list_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_shopping_list_name"
            android:layout_marginTop="5dp"
            android:text="Shop"
            android:textColor="@color/design_default_color_primary"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/chbox_shopping_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:buttonTint="#253AB8"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
