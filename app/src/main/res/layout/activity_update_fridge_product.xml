<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".update.UpdateFridgeProductActivity">

    <EditText
        android:id="@+id/etxt_update_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:autofillHints="Product name"
        android:drawableStart="@drawable/ic_playlist_add"
        android:drawablePadding="10dp"
        android:hint="@string/product_name"
        android:inputType="text"
        android:textStyle="italic" />

<!--    <TextView-->
<!--        android:id="@+id/txt_update_scan_barcode"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:drawablePadding="10dp"-->
<!--        android:text="@string/scan_barcode"-->
<!--        android:textSize="18sp"-->
<!--        app:drawableStartCompat="@drawable/ic_qr_code_scanner" />-->

    <EditText
        android:id="@+id/etxt_update_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints="Amount"
        android:drawableStart="@drawable/ic_north_east"
        android:drawablePadding="10dp"
        android:hint="@string/amount"
        android:inputType="number"
        android:textStyle="italic" />

    <Spinner
        android:id="@+id/spin_update_product_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_update_expiration_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="@string/expiration_date_optional"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_calendar_today" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_delete_date_in_update_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_update_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:text="@string/update"
        android:textColor="#FFFFFF" />

</LinearLayout>
