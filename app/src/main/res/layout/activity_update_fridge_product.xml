<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".update.UpdateFridgeProductActivity">

    <EditText
        android:id="@+id/etxt_add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:autofillHints="Product name"
        android:drawableStart="@drawable/ic_playlist_add"
        android:hint="@string/product_name"
        android:inputType="text"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/etxt_add_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints="Amount"
        android:drawableStart="@drawable/ic_north_east"
        android:hint="@string/amount"
        android:inputType="number"
        android:textStyle="bold|italic" />


    <Button
        android:id="@+id/btn_add_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:text="@string/add"
        android:textColor="#FFFFFF" />

</LinearLayout>
